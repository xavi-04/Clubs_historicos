pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/xavi-04/Clubs_historicos.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('linuxweb:latest', '-f linuxweb/dockerfile .')
                }
            }
        }
        stage('Run Tests') {
            steps {
                sh 'docker run --rm linuxweb:latest npm test -- --watchAll=false'
            }
        }
        stage('Deploy to DigitalOcean') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        docker.image('xavi355/linuxweb:latest').push('latest')
                    }
                }
                sh 'docker pull xavi355/linuxweb:latest && docker run -d -p 80:90 -p 4000:4000 xavi355/linuxweb:latest'
            }
        }
    }
}