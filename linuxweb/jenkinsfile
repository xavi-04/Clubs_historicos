pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/xavi-04/Clubs_historicos.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('xavi355/linuxweb:v1', '-f linuxweb/dockerfile .')
                }
            }
        }
        stage('Run Tests') {
            steps {
                sh 'docker run --rm xavi355/linuxweb:v1 npm test -- --watchAll=false'
            }
        }
        stage('Deploy to DigitalOcean') {
            steps {
                script {
                    echo 'Autenticando en Docker Hub'
                    docker.withRegistry ('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        echo 'Subiendo imagen al Docker Hub...'
                        docker.image('xavi355/linuxweb:v1').push('v1')
                        echo 'Imagen subida al Docker Hub'
                    }
                }
                echo 'Descargando e inciando contendedor en Docker Hub'
                sh 'docker pull xavi355/linuxweb:v1'
                sh 'docker run -d -p 80:80 xavi355/linuxweb:v1'
            }
        }
    }
}

